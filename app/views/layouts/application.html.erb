<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body class="body">
    <header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class='nav navbar-nav navbar-left' >
      <span class="ttl">Bookers</span>
    </nav>
    <nav>
      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><%=link_to "Home", user_path(current_user.id), class: "glyphicon glyphicon-home" %></li>
          <li><%= link_to "Users", users_path, class: "glyphicon glyphicon-user"%></li>
          <li><%=link_to "Books", books_path, class: "glyphicon glyphicon-home" %></li>
          <li><%=link_to "logout", destroy_user_session_path, method: :delete, class: "glyphicon glyphicon-log-out" %></li>
          <% else %>
          <li><%= link_to "Home", root_path, class: "glyphicon glyphicon-home"%></li>
          <li><%=link_to "About", home_about_path, class: "glyphicon glyphicon-link" %></li>
          <li><%= link_to "sign Up", new_user_registration_path ,class: "glyphicon glyphicon-book books"%></li>
          <li><%= link_to "login" , new_user_session_path, class: "glyphicon glyphicon-log-out logout"%></li>
          <% end %>
      </ul>
    </nav>
  </div>
</header>
<div class="body">
    <div class="container">
      <% flash.each do |key, value| %>
      <div class="flash flash-<%=key%>">
        <%= value %>
      </div>
    <% end %>
    <div class="row">
    <%= yield %>
    </div>
      <footer>
        <div class='container'>
          <div class='row'>
            <div class='col-xs-3 col-xs-offset-9'>
              <p>CopyRight Infratop.inc</p>
            </div>
          </div>
        </div>
      </footer>
</div>
  </body>
</html>

    <%= render 'users/user_info', user: @user %>
    <%= render 'books/have_field', new_book: @new_book %>

    <div class='col-xs-9'>
		<h2>Book detail</h2>
		<table class='table'>
		  <tr>
        <td>
        <%= link_to user_path(@book.user_id) do %>
        <%= attachment_image_tag @user, :profile_image, :fill, 40, 40, class: "attachment user profile_image fallback", fallback: "no_image_sm.jpg"%><br><%= @user.name%></td>
        <% end %>
        </td>
        <td><%= @book.title%></td>
        <td><%= @book.body%></td>
        <%if  @book.user_id == current_user.id %>
          <td><%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success"%></td>
          <td><%= link_to "Destroy", book_path, method: :delete, class: "btn-sm btn-danger ", data: { confirm: "本当に削除しますか？" } %></td>
          <% end %>
      </tr>
    </table>
  </div>
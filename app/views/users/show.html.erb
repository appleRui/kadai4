    <%= render 'users/user_info', user: @user %>
    <%= render 'books/have_field', new_book: @new_book %>

  <div class='col-xs-9'>
    <h2>Books</h2>

    <table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @books.each do |book|%>
    <tr>
         <td><%= attachment_image_tag @user, :profile_image, :fill, 40, 40, class: "attachment user profile_image fallback", fallback: "no_image_sm.jpg"%></td>
        <td><%= link_to book.title, book_path(book.id)%></td>
        <td><%= book.body%></td>
        <td><%= book.id%></td>
        <td><%= book.user_id%></td>
        <td><%= current_user.id%></td>
      </tr>
      <% end %>
  </tbody>
</table>
  </div>

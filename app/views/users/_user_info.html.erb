<div class='col-xs-3'>
  <h2>User info</h2>
      <table class='table'>
       <tr><%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "attachment user profile_image fallback", fallback: "no_image_lg.jpg"%></tr>
       <tr>
         <th>name</th>
         <th><%= user.name %></th>
       </tr>
       <tr>
       <th>introduction</th>
        <th><%= user.introduction %></th>
       </tr>
      </table>
    <div class='row'>
    <% if user.id == current_user.id %>
      <%= link_to "" , edit_user_path(user), class: "ol-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    <% else %>
      <%= link_to "" , user_path(current_user.id), class: "ol-xs-12 btn btn-default glyphicon glyphicon-wrench" %>
    <% end %>
    </div>